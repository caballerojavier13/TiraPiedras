<!DOCTYPE html>
<html>
<head>
  <title>Untitled</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom box-shadow">
  <h5 class="my-0 mr-md-auto font-weight-normal">Tira Piedras</h5>
  <% if player_signed_in? %>
    <nav class="my-2 my-md-0 mr-md-3">
      <a class="p-2 text-dark"><%= current_player.email %></a>
    </nav>
    <%= link_to 'Salir', destroy_player_session_path, :method => :delete, class: 'btn btn-outline-primary' %>
  <% else %>
    <%= link_to 'Iniciar Session',  new_player_session_path, class: 'btn btn-outline-primary' %>
  <% end %>
</div>

<div class="container">

  <% if notice %>
  <div class="alert alert-success" role="alert"><%= notice %></div>
  <% end %>

  <% if alert %>
  <div class="alert alert-danger" role="alert"><%= alert %></div>
  <% end %>

  <%= yield %>

</div>

</body>
</html>
